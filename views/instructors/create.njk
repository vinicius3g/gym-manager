{% extends "layout.njk" %}

{% block content %}
    <form class="card" method="POST" action="/instructors">
        <section class="avatar" style="background:url(https://source.unsplash.com/collection/3465564/900x900) no-repeat center center / cover"></section>
        <section class="details">
            <h3>New Instructor</h3>
            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://">
                </div>
            </div>
            <div class="item">
                <div>Instructor</div>
                <div>
                    <input type="text" name="name" placeholder="Manito">
                </div>
            </div>
            <div class="item">
                <div>Sexo</div>
                <span><input type="radio" name="gender" value="M">Male</span>
                <span><input type="radio" name="gender" value="F">Female</span>
            </div>
            <div class="item">
                <div>Date of birth</div>
                <input type="date" name="birth">
            </div>
            <div class="item">
                <div>side dish</div>
                <div>
                    <input type="text" name="services" placeholder="separate services provided by commas">
                </div>
            </div>
            <button type="submit">Save</button>
        </section>
    </form>
{% endblock content %}